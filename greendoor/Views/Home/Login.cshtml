@model greendoor.Models.Customer
@{
    ViewData["Title"] = "Login";
}
<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">
    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width,
 initial-scale = 1" />
    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/css/Site.css">
</head>
<body class="text-center">
    <div class="px-4 py-5 my-5 text-center">
        <div class="container" id="mainContainer">
            <!-- 1st row -->
            <div class="flex-container">

                <!-- Flexbox for staff login -->
                <div>
                    <h4 class="PageTitle">Login</h4>
                    <br />
                    <form method="post" action="~/Home/Login">
                        <fieldset class="loginFieldset">
                            <div class="form-group row">
                                <label asp-for="EmailAddr"
                                       class="col-sm-3 col-form-label sr-only"></label>
                                <div class="col-sm-9 col-md-5">
                                    <input asp-for="EmailAddr" class="form-control" name="txtEmail" id="txtEmail" required placeholder="Email" />
                                    <span asp-validation-for="EmailAddr"
                                          class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Password"
                                       class="col-sm-3 col-form-label sr-only"></label>
                                <div class="col-sm-9 col-md-5">
                                    <input asp-for="Password" class="form-control" name="txtPassword" id="txtPassword" required placeholder="Password" />
                                    <span asp-validation-for="Password"
                                          class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                            <span style="color:red;">@TempData["Message"]</span>

                        </fieldset>
                    </form>
                </div>
                <div>
                    <p>Don't have an existing account? Create a <a asp-action="RegisterCustomer" asp-controller="Home">Customer </a>or a <a asp-action="RegisterShop" asp-controller="Home">Shop </a>account now!</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>