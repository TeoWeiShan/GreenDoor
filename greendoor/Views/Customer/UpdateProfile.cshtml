@model greendoor.Models.Customer

@{
    ViewData["Title"] = "Uodate";
}
<br>
<h4 class="PageTitle">Profile</h4>
<hr />
<section class="holder">
    <div class="split">
        <img src="https://picsum.photos/400/400" />
    </div>

    <div class="split">
        <fieldset class="FormContent">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group-row">
                    <label asp-for="CustomerID" class="control-label"></label>
                    <input asp-for="CustomerID" class="form-control" readonly />
                </div>
                <div class="form-group-row">
                    <label asp-for="CustomerName" class="control-label"></label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group-row">
                    <label asp-for="EmailAddr" class="control-label"></label>
                    <input asp-for="EmailAddr" class="form-control" readonly />
                </div>
                <div class="form-group-row">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />
                <br />
                <div class="form-group-row">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
                <br />
                <br />
            </form>
    <div>
        <a asp-action="Profile" asp-controller="Customer">Back to Profile</a>&nbsp&nbsp&nbsp&nbsp||&nbsp&nbsp&nbsp&nbsp
        <a asp-action="DeleteProfile" asp-controller="Customer">Delete Profile</a>
    </div>
    </fieldset>
        </div>
</section>