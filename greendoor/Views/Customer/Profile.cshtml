@model greendoor.Models.Customer

@{
    ViewData["Title"] = "Profile";
}
<br>
<h4 class="PageTitle">Profile</h4>
<hr />

<section class="holder">


    <div class="split">
        <img src="https://picsum.photos/400/400" />
    </div>

    <div class="split">
        <fieldset class="FormContent">
            <div class="form-group row">
                <label asp-for="CustomerID"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Model.CustomerID
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CustomerName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Model.CustomerName
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EmailAddr"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Model.EmailAddr
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Model.Password
                </div>
            </div>
            <br />
            <br />
            <br />
            <div>
                <a asp-action="UpdateProfile" asp-controller="Customer">Update Profile</a>&nbsp&nbsp&nbsp&nbsp||&nbsp&nbsp&nbsp&nbsp
                <a asp-action="DeleteProfile" asp-controller="Customer">Delete Profile</a>
            </div>
        </fieldset>
    </div>


</section>