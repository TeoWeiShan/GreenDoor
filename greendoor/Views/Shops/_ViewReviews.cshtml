@model greendoor.Models.ShopReviewViewModel

@if (Model.reviewsList.Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered " style="margin-bottom:15px; ">
            <tbody>
                @foreach (var item in Model.reviewsList)
                {
                <tr>
                    <td>@item.CustomerName<small><br />@item.DateTimePosted</small><br />@item.Rating / 5 <br />@item.Description</td>
                    @*<td>@item.Rating</td>
                    <td>@item.Description</td>*@
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <br />
    <br />
    <h5 style="color:red">No Reviews!</h5>
}