@model IEnumerable<greendoor.Models.Reviews>
@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.CustomerName<small><br />@item.DateTimePosted</small><br />@item.Rating / 5 <br />@item.Description</td>
                    @*<td>@item.Rating</td>
                    <td>@item.Description</td>*@
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No Reviews!</span>
}