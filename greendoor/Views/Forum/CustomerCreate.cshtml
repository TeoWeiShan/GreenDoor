@model greendoor.Models.ForumPostCommentViewModel

@{
    ViewData["Title"] = "Add Discussion Topic";
}

<div class="px-4 py-5 my-5 text-center">
    <h4 class="PageTitle">Add Discussion Topic</h4>
    <br />

    <form asp-action="CustomerCreate" asp-controller="Forum">
        <div class="form-group">
            <label asp-for="CustomerName" class="control-label"></label>
            <input asp-for="CustomerName" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="PostCategory" class="control-label"></label>
            <select asp-for="PostCategory"
                    asp-items="@ViewData["PostCategory"] as List<SelectListItem>"
                    class="form-control">
            </select>

            <span asp-validation-for="PostCategory" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PostName" class="control-label"></label>
            <input asp-for="PostName" class="form-control" />
            <span asp-validation-for="PostName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PostDescription" class="control-label"></label>
            <input asp-for="PostDescription" class="form-control" />
            <span asp-validation-for="PostDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="CreatePost" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="CustomerViewForum" asp-controller="Forum">View Discussion Topics</a>
    </div>
</div>
