@model greendoor.Models.ForumPostCommentViewModel

@{
    ViewData["Title"] = "Add Comments";
}

<div class="px-4 py-5 my-5 text-center">
    <h4 class="PageTitle">Add Comments</h4>
    <br />

    <form asp-action="ShopCreateComment" asp-controller="Forum" asp-route-ForumPostID="@Model.ForumPostID">
        <div class="form-group">
            <label asp-for="ShopName" class="control-label"></label>
            <input asp-for="ShopName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="CommentsDescription" class="control-label"></label>
            <input asp-for="CommentsDescription" class="form-control" />
            <span asp-validation-for="CommentsDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="CreateComment" class="btn btn-primary" />
        </div>
    </form>
    <span style="color:red">@Model.ForumPostID</span>
    <div>
        <a asp-action="ShopViewDiscussion" asp-controller="Forum" asp-route-ForumPostID="@Model.ForumPostID">Back to Discussion</a>
    </div>
</div>
