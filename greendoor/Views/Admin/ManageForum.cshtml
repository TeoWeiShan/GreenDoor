@model greendoor.Models.AdminForumPostViewModel

@if (Model.forumPostList.Count != 0)
{
    <!-- Display a list of Competitions -->
    <div class="table-responsive">
        <table id="viewCompetition" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Post ID</th>
                    <th>Post Name</th>
                    <th>Customer Name</th>
                    <th>Date Posted</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.forumPostList)
                {
                <td>@item.ForumPostID</td>
                <td>@item.PostName</td>
                <td>@item.CustomerName</td>
                <td>@item.DateTimePosted</td>
                <td>
                    <a asp-action="ForumPostDetails" asp-controller="Admin"
                       asp-route-ForumPostID="@item.ForumPostID">View Post</a> || <a asp-action="ForumPostUpdate" asp-controller="Admin" asp-route-ForumPostID="@item.ForumPostID">Update Post</a> || <a asp-action="ForumPostDelete" asp-controller="Admin" asp-route-ForumPostID="@item.ForumPostID">Delete Post</a>
                </td>
            }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <span style="color:red;font-size:28px">@ViewData["noPost"]</span>
    }