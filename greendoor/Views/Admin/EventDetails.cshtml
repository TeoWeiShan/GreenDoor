@model greendoor.Models.AdminEventViewModel

@{
    ViewData["Title"] = "Event Details";
}
<br>
<h4 class="PageTitle">@Html.Display("EventName")</h4>
<hr />

<section class="holder">


    <div class="split">
        <img src="https://picsum.photos/400/400" />
    </div>

    <div class="split">
        <fieldset class="FormContent">
            <div class="form-group row">
                <label asp-for="EventName"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Model.EventName
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ShopName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Model.ShopName
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EventDescription"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Model.EventDescription
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="DateTimePosted"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Model.DateTimePosted
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="StartDate"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Model.StartDate
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EndDate"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Model.EndDate
                </div>
            </div>
        </fieldset>
    </div>


</section>