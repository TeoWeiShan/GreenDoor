@model greendoor.Models.AdminShopViewModel

@if (Model.reviewsList.Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered " style="margin-bottom:15px; ">
            <tbody>
                @foreach (var item in Model.reviewsList)
                {
                <tr>
                    <td>@item.CustomerName<small><br />@item.DateTimePosted</small><br />@item.Rating / 5 <br />@item.Description <br /> <a asp-controller="Admin" asp-action="ShopReviewDelete" asp-route-ReviewsID="@item.ReviewsID">Delete Reviews</a></td>
                    
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No Reviews!</span>
}