@model greendoor.Models.AdminEventViewModel
@{
    ViewData["Title"] = "Delete Event";
}

<body>
    @*<h4 class="PageTitle">Add Event</h4>
    <hr />*@
    <div class="d-flex align-content-center justify-content-center">
        <div class="card my-5 shadow" style="width:1000px">
            <h2 class="card-title card-header bg-custom navbar-dark mb-3 text-center" style="color:#f5eec2">
                Update Event
            </h2>
            <div class="card-body">
                <form asp-action="EventDelete" asp-controller="Admin" >
                    @Html.ValidationSummary(true)
                    <fieldset class="FormContent">
                        <div class="form-group row">
                            <label asp-for="ShopID"
                                   class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 col-md-5">
                                <input asp-for="ShopID" class="form-control form-control-plaintext" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="ShopName"
                                   class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 col-md-5">
                                <input asp-for="ShopName" class="form-control form-control-plaintext" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="EventID"
                                   class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 col-md-5">
                                <input asp-for="EventID" class="form-control form-control-plaintext" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="EventName"
                                   class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 col-md-5">
                                <input asp-for="EventName" class="form-control-plaintext" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="EventDescription"
                                   class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 col-md-5">
                                <input asp-for="EventDescription" class="form-control-plaintext"  readonly/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="StartDate"
                                   class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 col-md-5">
                                <input type="datetime-local" asp-for="StartDate" class="form-control-plaintext" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="EndDate"
                                   class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 col-md-5">
                                <input type="datetime-local" asp-for="EndDate" class="form-control-plaintext" readonly />
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <input type="submit" value="Delete" class="btn btn-primary" />
                            </div>
                        </div>
                        <div>
                            <a asp-action="EventDetails" asp-controller="Admin" asp-route-eventID="@Model.EventID">Back to List</a>
                        </div>
                    </fieldset>
                </form>

            </div>
        </div>
    </div>


</body>