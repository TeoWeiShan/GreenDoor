@model greendoor.Models.EcoEvents

@{
    ViewData["Title"] = "Details";
}

<br>
<h4 class="PageTitle">@Html.Display("ShopName")</h4>
<hr />

<section class="holder">


    <div class="split">
        <img src="https://picsum.photos/400/400" />
        <br />
        <br />
        <a asp-controller="Events" asp-action="Index">Back to Events Page</a>
    </div>

    <div class="split">
        <fieldset class="FormContent">
            <div class="form-group row">
                <label asp-for="EventName"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.Display("EventName")
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EventDescription" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.Display("EventDescription")
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="DateTimePosted"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.Display("DateTimePosted")
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="StartDate"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.Display("StartDate")
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EndDate"
                       class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9 form-control-plaintext">
                    @Html.Display("EndDate")
                </div>
            </div>
            @if (Model.isShop == true)
            {
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label"> <a asp-controller="Events" asp-action="EventUpdate" asp-route-eventID="@Model.EventID">Update Event</a></label>
                    <div class="col-sm-9 form-control-plaintext">
                        <a asp-controller="Events" asp-action="EventDelete" asp-route-eventID="@Model.EventID">Delete Event</a>
                    </div>
                </div>
            }
            else
            {

            }

        </fieldset>
    </div>


</section>