@model greendoor.Models.EcoEvents

@{
    ViewData["Title"] = "Create";
}

<body>
    @*<h4 class="PageTitle">Add Event</h4>
    <hr />*@
    <div class="d-flex align-content-center justify-content-center">
        <div class="card my-5 shadow" style="width:1000px">
            <h2 class="card-title card-header bg-custom navbar-dark mb-3 text-center" style="color:#f5eec2">
                Add event
            </h2>
            <div class="card-body">
                <form asp-action="Create">
                    @Html.ValidationSummary(true)
                    <fieldset class="FormContent">
                        <div class="form-group row">
                            <label asp-for="EventName"
                                   class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 col-md-5">
                                <input asp-for="EventName" class="form-control" />
                                <span asp-validation-for="EventName"
                                      class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="EventDescription"
                                   class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 col-md-5">
                                <input asp-for="EventDescription" class="form-control" />
                                <span asp-validation-for="EventDescription"
                                      class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="StartDate"
                                   class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 col-md-5">
                                <input type="datetime-local" asp-for="StartDate" class="form-control" />
                                <span asp-validation-for="StartDate"
                                      class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="EndDate"
                                   class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9 col-md-5">
                                <input type="datetime-local" asp-for="EndDate" class="form-control" />
                                <span asp-validation-for="EndDate"
                                      class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </fieldset>
                </form>
                        
            </div>
        </div>
    </div>
    

</body>
